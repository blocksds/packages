pkgname=thirdparty-blocksds-libdsf
groups=(thirdparty-blocksds-extra)
pkgver=0.1.2
pkgrel=2
epoch=
pkgdesc="C library to render text from fonts generated by BMFont"
arch=(any)
source=("$pkgname::git+https://github.com/AntonioND/libdsf#tag=v0.1.2")
url="https://github.com/AntonioND/libdsf"
license=("Zlib")
depends=(thirdparty-blocksds-toolchain)
sha256sums=('SKIP')
options=('!strip')

. "/wf/config/runtime-env-vars.sh"

# . "../templates/git-pkgver.PKGBUILD"

build() {
	wf_use_toolchain gcc-arm-none-eabi arm-none-eabi

	cd "$pkgname"
	make
}

package() {
	cd "$pkgname"
	
	BLOCKSDSEXT="$pkgdir$WF_DESTDIR"/thirdparty/blocksds/external \
	make -j1 install
}
