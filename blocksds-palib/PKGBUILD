pkgname=blocksds-palib
groups=(blocksds-extra)
pkgver=251009
pkgrel=1
epoch=
pkgdesc="Library to make 2D applications with for the NDS."
arch=(any)
source=("$pkgname::git+https://codeberg.org/SkyLyrac/palib#tag=v$pkgver")
url="https://codeberg.org/SkyLyrac/palib"
license=("complex")
depends=(blocksds-toolchain)
sha256sums=('SKIP')
options=('!strip')

package() {
	cd "$pkgname"

	export BLOCKSDSEXT="$pkgdir$WF_DESTDIR"/thirdparty/blocksds/external

	make -j`nproc` install
}
